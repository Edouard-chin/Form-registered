{% extends 'DudekUserBundle::base_login.html.twig' %}
{% block loginForm %}
  {% if error %}
    <div class="form-login-error" style="display: block;">
      <h3> {{ error.messageKey|trans(error.messageData, 'security') }} </h3>
    </div>
  {% endif %}
  <form method="POST" role="form" action="{{ path('fos_user_security_check') }}">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="entypo-user"></i>
        </div>
        <input type="text" class="form-control" id="username" name="_username" placeholder="Username" autocomplete="off" />
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="entypo-key"></i>
        </div>
        <input type="password" class="form-control" name="_password" id="password" placeholder="Password" autocomplete="off" />
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-login">
        <i class="entypo-login"></i>
        Connexion
      </button>
    </div>
  </form>
  <form method="POST" action="{{ path('front_user_register') }}">
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="entypo-key"></i>
        </div>
        <input type="text" class="form-control" name="_username" placeholder="User id" autocomplete="off" />
      </div>
    </div>
     <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-login">
        <i class="entypo-login"></i>
        Cr√©er un compte
      </button>
    </div>
  </form>
{% endblock %}
