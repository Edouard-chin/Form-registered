<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content="Form spreading" />
		<meta name="author" content="Edouard CHIN" />

		<title>Login</title>

		<link rel="stylesheet" href="{{ asset('bundles/dudekform/css/Back/entypo/css/entypo.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/dudekform/css/Back/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('bundles/dudekform/css/Back/neon-theme.css') }}">

		<script src="{{ asset('bundles/dudekform/js/Back/jquery-1.11.0.min.js') }}"></script>

		<!--[if lt IE 9]><script src="assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

		<!--[if lt IE 9]>
			<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
			<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
		<![endif]-->
	</head>
	<body class="page-body login-page login-form-fall" data-url="http://neon.dev">
		<div class="login-container">
			<div class="login-header login-caret">
				<div class="login-content">
					<a href="#" class="">
						<img src="{{ asset('bundles/dudekform/images/logo42.gif') }}" alt="" />
					</a>
					<p class="description">Ce formulaire nécessite d'être connecté pour y accéder.</p>
					<div class="login-progressbar-indicator">
						<h3></h3>
						<span></span>
					</div>
				</div>
			</div>
			<div class="login-progressbar">
				<div></div>
			</div>
			<div class="login-form">
				<div class="login-content">
					<div class="form-login-error">
						<h3>Invalid login</h3>
						<p>Enter <strong>demo</strong>/<strong>demo</strong> as login and password.</p>
					</div>
					{% if error %}
				    <div class="form-login-error" style="display: block;">
				      <h3> Nom d'utilisateur ou mot de passe incorrect. </h3>
				    </div>
				  {% endif %}

					<form method="POST" role="form" action="{{ path('fos_user_security_check') }}">
    				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
								<input type="text" class="form-control" id="username" name="_username" placeholder="Username" autocomplete="off" />
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-key"></i>
								</div>
								<input type="password" class="form-control" name="_password" id="password" placeholder="Password" autocomplete="off" />
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block btn-login">
								<i class="entypo-login"></i>
								Connexion
							</button>
						</div>
					</form>
					<div class="login-bottom-links">
						<span>Copyright</span>  - <span>Edouard CHIN</span>
					</div>
				</div>
			</div>
		</div>
		<script src="{{ asset('bundles/dudekform/js/Back/gsap/main-gsap.js') }}"></script>
		<script src="{{ asset('bundles/dudekform/js/Back/jquery.validate.min.js') }}"></script>
		<script src="{{ asset('bundles/dudekform/js/Back/neon-login.js') }}"></script>
	</body>
</html>