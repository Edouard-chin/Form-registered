{% extends 'DudekUserBundle::base_login.html.twig' %}
{% block loginForm %}
  {# {% if error %}
    <div class="form-login-error" style="display: block;">
      <h3> {{ error.messageKey|trans(error.messageData, 'security') }} </h3>
    </div>
  {% endif %} #}
  {{ form_start(form) }}
    <input type="hidden" name="_username" value="{{ user.username }}">
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="entypo-user"></i>
        </div>
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">
          <i class="entypo-user"></i>
        </div>
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'Répéter le mot de passe'}}) }}
      </div>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block btn-login">
        <i class="entypo-login"></i>
        Inscription
      </button>
    </div>
  {{ form_end(form) }}
{% endblock %}
