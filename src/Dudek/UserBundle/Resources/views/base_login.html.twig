{% extends '::base.html.twig' %}
{% block title %} Login {% endblock %}
{% block stylesheets %}
  {% stylesheets
    'bundles/dudekform/css/Back/neon-theme.css'
    filter="cssrewrite" output="css/compiled/base-login.css" %}
    <link rel="stylesheet" href="{{ asset_url }}">
  {% endstylesheets %}
{% endblock %}
{% block javascripts_head %}
  {% javascripts
    'bundles/dudekform/js/Back/jquery.validate.min.js'
    'bundles/dudekform/js/Back/neon-login.js'
    output="js/compiled/base-login.js" %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}
{% endblock %}
{% block body %}
  <body class="page-body login-page login-form-fall" data-url="http://neon.dev">
    <div class="login-container">
      <div class="login-header login-caret">
        <div class="login-content">
          <a href="#" class="">
            <img src="{{ asset('bundles/dudekform/images/logo42.gif') }}" alt="" />
          </a>
          <p class="description">Ce formulaire nécessite d'être connecté pour y accéder.</p>
          <div class="login-progressbar-indicator">
            <h3></h3>
            <span></span>
          </div>
        </div>
      </div>
      <div class="login-progressbar">
        <div></div>
      </div>
      <div class="login-form">
        <div class="login-content">
          {% if error %}
            <div class="form-login-error" style="display: block;">
              <h3> {{ error.messageKey|trans(error.messageData, 'security') }} </h3>
            </div>
          {% endif %}
          <form method="POST" role="form" action="{{ path('fos_user_security_check') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="entypo-user"></i>
                </div>
                <input type="text" class="form-control" id="username" name="_username" placeholder="Username" autocomplete="off" />
              </div>
            </div>
            <div class="form-group">
              <div class="input-group">
                <div class="input-group-addon">
                  <i class="entypo-key"></i>
                </div>
                <input type="password" class="form-control" name="_password" id="password" placeholder="Password" autocomplete="off" />
              </div>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block btn-login">
                <i class="entypo-login"></i>
                Connexion
              </button>
            </div>
          </form>
          <div class="form-group">
              <a class="btn btn-primary btn-block btn-login" href="{{ path('front_user_register') }}">
                <i class="entypo-login"></i>
                Créer un compte
              </a>
          </div>
          <div class="login-bottom-links">
            <span>Copyright</span>  - <span>Edouard CHIN</span>
          </div>
        </div>
      </div>
    </div>
  </body>
{% endblock %}
